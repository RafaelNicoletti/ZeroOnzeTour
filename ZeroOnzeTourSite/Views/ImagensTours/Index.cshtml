@model IEnumerable<ZeroOnzeTour.Models.ImagensTour>

@{
    Layout = "~/Areas/ADM/Views/Shared/_Layout.cshtml";
}
<h1>Lista de imagens</h1>

<p>
    <a asp-action="Create" class="btn btn-primary" asp-route-id="@ViewBag.IdViagem">Novo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Foto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TipoImagem)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ordem)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ativo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    <img src="~/fotos/@(item.Foto)" width="50" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TipoImagem)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Ordem)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Ativo)
                </td>
                <td>
                    <a asp-action="Edit" class="btn btn-primary" asp-route-id="@item.Id">Editar</a>
                  @*  <a class="btn btn-warning" asp-area="" asp-controller="ImagensTour" asp-action="Index" asp-route-id="@item.Id">Imagens</a>*@
                    <a asp-action="Delete" class="btn btn-dark" asp-route-id="@item.Id">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>
